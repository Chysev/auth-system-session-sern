{
  "name": "auth-system-session-backend",
  "version": "1.0.0",
  "description": "Express auth session typescript with prisma ",
  "main": "_app.ts",
  "scripts": {
    "prebuild": "npm run clean:build",
    "dev": "npm run prisma:generate && cross-env NODE_ENV=development ts-node-dev --project tsconfig.dev.json -r tsconfig-paths/register --transpile-only --respawn --exit-child _app.ts",
    "build:production": "npm run prisma:generate && tsc --build tsconfig.build.json && tsc-alias -p tsconfig.json",
    "production": "npm run build:production && node build/_app.js",
    "start": "cross-env FORCE_COLOR=2 node ./build/_app.js",
    "clean:build": "rm -rf build",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf node_modules coverage build .nyc_output",
    "devEnv": "dotenv -e .env.dev --",
    "prodEnv": "dotenv -e .env.prod --",
    "prisma": "npx prisma",
    "prisma:format": "npx prisma format",
    "prisma:generate": "npm run devEnv npx prisma generate",
    "prisma:migrate": "npm run devEnv npx prisma migrate dev --name init",
    "prisma:seed": "npm run devEnv npx prisma db seed",
    "prisma:studio": "npm run devEnv npx prisma studio"
  },
  "author": "Chysev",
  "keywords": [
    "NodeJS",
    "TypeScript",
    "Express",
    "Prisma",
    "Boilerplate",
    "Authentication",
    "Session"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "@quixo3/prisma-session-store": "^3.1.13",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nocache": "^4.0.0",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.4.17",
    "@swc/helpers": "^0.5.11",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "cross-env": "^7.0.3",
    "prisma": "^5.13.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  }
}
